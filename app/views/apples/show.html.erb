<h1>タイトル</h1>
<h3>Apple詳細</h3>
<div class="apple">
  <p><%= @apple.about %></p>
  <p><%= @apple.created_at %></p>

  <% if user_signed_in? %>
      <% if current_user.already_liked?(@apple) %>
        <%= link_to apple_like_path(@apple), method: :delete do %>
            <i class="fas fa-heart"><%= @apple.likes.count %>
        <% end %>
      <% else %>
        <%= link_to apple_likes_path(@apple), method: :post do %>
            <i class="far fa-heart"><%= @apple.likes.count %>
        <% end %>
      <% end %>
    <% else %>
    <i class="far fa-heart"><%= @apple.likes.count %>
    <% end %>
  <%= link_to "編集する", edit_apple_path(@apple.id) %>
</div>

<h2>いいねしたユーザー</h2>
<% @apple.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "編集する", edit_apple_path(@apple.id) %>
<%= link_to "一覧に戻る", apples_path %>